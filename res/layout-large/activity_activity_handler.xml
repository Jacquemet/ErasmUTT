<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- "Fragment Activity List" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <fragment
        android:id="@+id/list_activity_frag"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        class="fr.utt.erasmutt.fragments.activities.ListActivityFragment" />
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="@dimen/field_vertical_margin">
    
    <!-- "Fragment Activity Details" -->

    <fragment
        android:id="@+id/details_activity_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="fr.utt.erasmutt.fragments.activities.DetailsActivityFragment"/>
    
    </LinearLayout>

</LinearLayout>    
    
</android.support.v4.widget.DrawerLayout>