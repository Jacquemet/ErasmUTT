<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- "Fragment Activity List" -->
  <fragment class="fr.utt.erasmutt.fragments.activities.ListActivityFragment"
            android:id="@+id/list_activity_frag"
            android:layout_width="320dp"
            android:layout_height="match_parent"/>
    <!-- "Fragment Activity Details" -->
  <fragment class="fr.utt.erasmutt.fragments.activities.DetailsActivityFragment"
            android:id="@+id/details_activity_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    
</android.support.v4.widget.DrawerLayout>