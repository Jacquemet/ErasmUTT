<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:minHeight="150dp"
    android:orientation="horizontal"
 >

   <LinearLayout 
 	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	>
	    <ImageView
	        android:id="@+id/thumbImageUser"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_marginRight="@dimen/field_vertical_margin"
	     />
	    <TextView
		        android:id="@+id/nameUserReview"
		        android:gravity="center"
		        android:layout_width="50dp"
	        	android:layout_height="50dp"
		        android:textSize="12sp"
		        android:text=""
	    	/>
	</LinearLayout>
	<LinearLayout 
 	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/titleReview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:textSize="13sp"
	        android:background="@color/background_dark_blue"
        	android:gravity="center"
	        android:text=""
	        android:textColor="@color/background_white"
	        android:textStyle="bold" />
	 	<LinearLayout
 	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		    <RatingBar
		            android:id="@+id/ratingBarReview"
		            style="@style/customRatingBarSmall"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/field_vertical_margin"
		            android:layout_marginRight="@dimen/field_vertical_margin"
		            android:isIndicator="true"
		            android:paddingTop="5dp"
		            android:numStars="5"
		            android:rating="3.7"
		            android:stepSize="0.5" />
		     <TextView
		        android:id="@+id/dateReview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingTop="5dp"
		        android:gravity="right"
		        android:textSize="12sp"
		        android:text=""
	    	/>
	    </LinearLayout>
	    <TextView
	        android:id="@+id/descReview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:textSize="12sp"
	        android:text=""
	    />
	    
		</LinearLayout>

</LinearLayout>
